
mixin badge(label,size='xs',color='gray')
  span.px-2.inline-flex.leading-5.font-semibold.rounded-full(class='text-' + size + ' bg-' + color + '-100 text-' + color + '-800') #{label}

mixin badge-green(label)
  span.px-2.inline-flex.text-xs.leading-5.font-semibold.rounded-full.bg-green-100.text-green-800 #{label}
